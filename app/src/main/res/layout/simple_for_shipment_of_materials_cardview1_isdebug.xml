<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/simple_shipment_of_materials"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    android:background="#F5FFFA"
    tools:context=".Code_Shipment_of_Materials_ОтгрузкаМатериалов.MainActivity_shipment_of_materials">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardvie_shipment_of_materials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:minHeight="50dp"
        android:layout_margin="5dp"
        android:checkable="true"
        android:clickable="true"
        android:singleLine="false"
        android:focusable="true"
        android:textSize="10sp"

        app:cardBackgroundColor="#F0F8FF"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:strokeColor="#F5FFFA"
        app:cardMaxElevation="10dp"
        app:strokeWidth="0dp"
        android:translationZ="50dp"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/relativelayout_shipment_of_materials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp">


            <TableLayout
                android:id="@+id/gridLayout_shipment_of_materials"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_gravity="center_horizontal"
                android:visibility="visible">

 <!--   Сюда через инфлейтер добавляем данные -->
            </TableLayout>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>



</LinearLayout>