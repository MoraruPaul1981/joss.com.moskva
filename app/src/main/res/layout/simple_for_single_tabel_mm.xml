<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/TableLayoutAdmissionLayoutInflater_row"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center_horizontal|center_vertical"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    tools:context=".Code_ForTABEL.MainActivity_Tabel_Single_People">


    <TableRow android:id="@+id/TableRowsContenerSingleTabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center_vertical|center_horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/RowКонтейнерКудаЗагружаетьсяФИО"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:layout_span="4"
            android:background="#FFFFFF"
            android:foregroundGravity="center"
            android:gravity="center_vertical|center_horizontal"
            android:hint="ФИО+Профессия"
            android:minWidth="100dp"
            android:minHeight="35dp"
            android:textAlignment="gravity"
            android:textColor="#000000"
            android:textSize="13sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp"
            android:padding="2dp"
            app:strokeColor="#F5FFFA" />
    </TableRow>

    <TableRow android:id="@+id/TableOneRowLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center_vertical|center_horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/line1singletabel"
            android:layout_span="5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:minWidth="100dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:clickable="true"
            android:focusable="auto"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:typeface="normal"
            android:visibility="visible"
            app:cornerRadius='150dp'
            app:cardElevation="5dp"
            tools:visibility="visible"
            android:translationZ="100dp"
            android:background="@drawable/StyleSingleTableRowLIne2"
            android:animateLayoutChanges="true" />
    </TableRow>






<!--//TODO начало первой строчки НАЗВАНИЙ-->
    <TableRow
        android:id="@+id/TableRow1"
        android:layout_width="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="2dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content"
        android:minHeight="40dp">


        <com.google.android.material.textview.MaterialTextView
            android:layout_column="0"
            android:id="@+id/TextViewD1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:visibility="visible"
            android:hint="d1"
            android:layout_width="80dp"
            android:layout_height="6mm"
            android:textSize="18sp"
            android:background="#FFFFFF"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_column="1"
            android:id="@+id/TextViewD2"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:padding="2dp"
            android:visibility="visible"
            android:hint="d2"
            android:layout_width="80dp"
            android:layout_height="6mm"
            android:textSize="18sp"
            android:background="#FFFFFF" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_column="2"
            android:id="@+id/TextViewD3"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:padding="2dp"
            android:visibility="visible"
            android:hint="d3"
            android:layout_width="80dp"
            android:layout_height="6mm"
            android:textSize="18sp"
            android:background="#FFFFFF" />
        <com.google.android.material.textview.MaterialTextView
            android:layout_column="3"
            android:id="@+id/TextViewD4"
            android:gravity="center_vertical|center_horizontal"
            android:layout_margin="2dp"
            android:textStyle="bold"
            android:padding="2dp"
            android:visibility="visible"
            android:hint="d4"
            android:layout_width="80dp"
            android:layout_height="6mm"
            android:textSize="18sp"
            android:background="#FFFFFF" />
    </TableRow>
<!--//TODO конец первой строки Названия -->

 <!--
    //TODO НАЧАЛО ВТОРОЙ ЛИНИИ ЦВЕТА -->
    <TableRow android:id="@+id/TableTwoLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginEnd="2dp"
        android:gravity="center_vertical|center_horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/line2singletabel"
            android:layout_span="5"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:minWidth="100dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:clickable="true"
            android:focusable="auto"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:typeface="normal"
            android:visibility="visible"
            app:cornerRadius='150dp'
            app:cardElevation="5dp"
            tools:visibility="visible"
            android:translationZ="100dp"
            android:background="@drawable/textlines_tabel_row_name_value"
            android:animateLayoutChanges="true" />
    </TableRow>




    <!--//TODO НАчало ПЕРВОЙ ЛИНИИ ДАННЫХ-->
    <TableRow
        android:id="@+id/TableDataOneRow"
        android:layout_width="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="1dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_height="wrap_content"
        android:minHeight="40dp">


        <EditText
            android:id="@+id/EditText1"
            android:layout_column="0"
            android:layout_width="87dp"
            android:layout_height="6mm"
            android:foregroundGravity="center"
            android:hint="V1"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:padding="0dp"
            android:textAlignment="center"
            android:textColorHint="#00ACC1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/EditText2"
            android:layout_column="1"
            android:layout_width="87dp"
            android:layout_height="6mm"
            android:foregroundGravity="center"
            android:hint="V2"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:padding="0dp"
            android:textAlignment="center"
            android:textColorHint="#00ACC1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/EditText3"
            android:layout_column="2"
            android:layout_width="87dp"
            android:layout_height="6mm"
            android:foregroundGravity="center"
            android:hint="V3"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:padding="0dp"
            android:textAlignment="center"
            android:textColorHint="#00ACC1"
            android:textSize="24sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/EditText4"
            android:layout_column="3"
            android:layout_width="87dp"
            android:layout_height="6mm"
            android:foregroundGravity="center"
            android:hint="V4"
            android:gravity="center_vertical|center_horizontal"
            android:layout_marginStart="1dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="1dp"
            android:layout_marginBottom="1dp"
            android:background="@android:color/transparent"
            android:inputType="number"
            android:padding="0dp"
            android:textAlignment="center"
            android:textColorHint="#00ACC1"
            android:textSize="24sp"
            android:textStyle="bold" />


    </TableRow>
</TableLayout>