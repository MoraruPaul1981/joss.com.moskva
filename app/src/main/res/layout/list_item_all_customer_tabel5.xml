<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@android:id/text1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:visibility="visible"
    android:orientation="vertical"
    tools:context=".Tabels.MainActivity_List_Peoples">




<TableLayout
    android:id="@+id/tableLayoutPeople"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:gravity="center_horizontal|center_vertical"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"

    >
                <!--//TODO начало    строчки ЦФО-->
                <TableRow
                    android:id="@+id/tableRowPeople"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="2dp"
                    android:padding="2dp"
                    android:gravity="center_vertical|center_horizontal">



                            <ImageView
                                android:id="@+id/ImageViewPeople"
                                android:layout_width="20dp"
                                android:layout_height="80dp"
                                android:layout_column="0"
                                android:layout_margin="2dp"
                                android:padding="2dp"
                                android:layout_toLeftOf="@+id/MaterialTextViewPeople"
                                android:animateLayoutChanges="true"
                                android:background="@drawable/stylesingletablerowiine6"
                                android:gravity="center"

                                android:visibility="visible"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="10dp"
                                app:srcCompat="@drawable/icon_for_eople_listtabel1"
                                app:strokeColor="#F5FFFA" />


                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/MaterialTextViewPeople"
                                    android:layout_column="1"
                                    android:layout_width="240dp"
                                    android:layout_height="80dp"
                                    android:layout_margin="2dp"
                                    android:padding="1dp"
                                    android:layout_toLeftOf="@+id/MaterialTextViewPeopeChasy"
                                    android:animateLayoutChanges="true"
                                    android:background="@drawable/stylesingletablerowiine6"
                                    android:checkMark="?android:attr/textCheckMark"
                                    android:foregroundGravity="center"
                                    android:gravity="center"
                                    android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                                    android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                                    android:text="фио"
                                    android:textAlignment="gravity"
                                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                                    android:textColor="#000000"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:visibility="visible"
                                    app:cardCornerRadius="20dp"
                                    android:tooltipText="фио"
                                    app:cardElevation="10dp"
                                    app:strokeColor="#F5FFFA" />



                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/MaterialTextViewPeopeChasy"
                                android:layout_width="40dp"
                                android:layout_height="80dp"
                                android:layout_column="2"
                                android:layout_margin="2dp"
                                android:padding="2dp"
                                android:animateLayoutChanges="true"
                                android:background="@drawable/stylesingletablerowiine6"
                                android:checkMark="?android:attr/textCheckMark"
                                android:foregroundGravity="center"
                                android:gravity="center"
                                android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                                android:text="смены"
                                android:textAlignment="gravity"
                                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                                android:textColor="#716D6D"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:tooltipText="количество смен"
                                android:visibility="visible"
                                app:cardCornerRadius="20dp"
                                app:cardElevation="10dp"
                                app:strokeColor="#F5FFFA" />



                </TableRow>
                <!--//TODO начало    строчки ТС-->
                <!--//TODO конец первой строки Названия -->
        </TableLayout>


</LinearLayout>











