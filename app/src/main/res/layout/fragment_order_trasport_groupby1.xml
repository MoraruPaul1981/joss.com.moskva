<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:id="@android:id/text1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center"
    tools:context=".OrdersTransports.Window.MainActivityOrdersTransports"
    android:orientation="vertical">

<com.google.android.material.card.MaterialCardView
    android:id="@+id/materialCardView_single_ot"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_gravity="center"
    app:cardCornerRadius="0dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="10dp"
    app:strokeWidth="1dp"
    android:padding="1dp"
    android:layout_margin="5dp"
    android:translationZ="100dp"
    android:animateLayoutChanges="true"
    android:background="#F2F8F8"
    app:cardBackgroundColor="#F2F8F8"
    app:strokeColor="#F2F8F8"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    tools:context=".OrdersTransports.Window.MainActivityOrdersTransports">


    <LinearLayout
        android:id="@+id/linearLayoutorderstransport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0FFFF"
        android:gravity="center"
        tools:context=".OrdersTransports.Window.MainActivityOrdersTransports"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <!--  НАЧАЛО ПЕРВОГО БЛОКА -->
        <TableLayout
            android:id="@+id/tablelayoutot_groupby"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0FFFF"
            android:gravity="center_horizontal|center_vertical"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
            tools:context=".OrdersTransports.Window.MainActivityOrdersTransports">


            <!--//TODO начало    строчки ЦФО-->
            <TableRow
                android:id="@+id/tableRow0"
                android:layout_width="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:id="@+id/linearlayout_ot_for_cfo"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F0FFFF"
                    android:gravity="center"
                    android:orientation="vertical">


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ot_date_order_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:padding="1dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/stylesingletablerowiine11"
                    android:checkMark="?android:attr/textCheckMark"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:hint="  Даты #1"
                    android:textAlignment="gravity"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:strokeColor="#F5FFFA"
                    android:animateLayoutChanges="true"
                    android:visibility="visible"/>


                </LinearLayout>
            </TableRow>
            <!--//TODO начало    строчки ТС-->

        </TableLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>



</LinearLayout>



