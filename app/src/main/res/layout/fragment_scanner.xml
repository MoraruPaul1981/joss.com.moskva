<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activityfragmentscannerss"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".For_Code_ScannerBluetoolth.MainActivity_ScannerBluetoolth"
    android:orientation="vertical">




    <RelativeLayout
        android:id="@+id/activitynain_for_Taskslinelayoutrela3nameAndLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:background="#FFFFFF"
        tools:context=".Code_For_Tasks_КодДля_Задания.MainActivity_Tasks">


        <TextView
            android:id="@+id/TextView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text=""
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible"
            tools:ignore="MissingConstraints,RtlCompat" />

        <View
            android:id="@+id/viewФрагментДляактивтизадачи"
            android:layout_width="180dp"
            android:layout_height="3dp"
            android:layout_marginTop="2dp"
            android:background="@color/colorPrimaryDark"
            android:layout_below="@+id/TextView"
            android:layout_centerHorizontal="true"
            android:gravity="center_vertical"
            app:layout_constraintTop_toTopOf="@+id/TextView" />

    </RelativeLayout>








    <RelativeLayout
        android:id="@+id/activitynain_for_Taskslinelayoutrela3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:background="#FFFFFF"

        tools:context=".Code_For_Tasks_КодДля_Задания.MainActivity_Tasks">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleviewcommitpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomnavigationActivicommit"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#FFFFFF"
            android:minHeight="500dp"
            android:visibility="visible"
            tools:ignore="MissingConstraints" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomnavigationActivicommit"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#FFFFFF"
            android:scrollbarFadeDuration="@integer/config_navAnimTime"
            android:translationZ="60dp"
            app:menu="@menu/menuscannerblueeooth"
            tools:ignore="MissingConstraints" />


        <ProgressBar
            android:id="@+id/prograessbarcommitpaydown"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_above="@+id/bottomnavigationActivicommit"
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_height="10dp"
            android:scaleY="3"
            android:scaleX="1"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:visibility="visible" />


    </RelativeLayout>




</LinearLayout>

