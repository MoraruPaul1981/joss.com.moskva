<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tableLayout_dashboard"
    android:shrinkColumns="*"
    android:stretchColumns="0"
    android:collapseColumns="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="top"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    tools:context=".Dashboard.MainActivity_Dashboard">


    <!--//TODO   ROW#1-->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/disayn_line_tablerow6"
        android:gravity="center"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:layout_gravity="center">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarcamera_dashbord"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:elevation="0dp"
            app:showAsAction="always"
            app:theme="@style/AppTheme">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <!--   //TODO   #5 -->
                <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/imageview_to_settings"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignLeft="@+id/TextViewLogo"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="10dp"
                    android:alpha="0.5"
                    android:backgroundTint="#FFFFFF"
                    android:visibility="visible"
                    app:rippleColor="@color/colorPrimaryDark"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:foreground="?attr/selectableItemBackground"
                    app:srcCompat="@drawable/icon_new_dashaborad_settings" />


                <TextView
                    android:id="@+id/TextViewLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_centerInParent="true"
                    android:fontFamily="@font/alegreya_sans_sc_thin"
                    android:gravity="center"
                    android:hint="КАМЕРА"
                    android:text="Союз-Автодор"
                    android:textAlignment="center"
                    android:textColor="#000000"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:visibility="visible" />


            </RelativeLayout>



        </androidx.appcompat.widget.Toolbar>



    </TableRow>


    <!--//TODO   ROW#2-->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:background="@drawable/disayn_line_tablerow6"
        android:layout_gravity="center">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollViewApp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/КнопкаЗаявкаНаТранспорт"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/КнопкаСогласование"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:drawableLeft="@drawable/icon_task_transport_dashbord"
                    android:fontFamily="@font/alfa_slab_one"
                    android:gravity="center"
                    android:minHeight="70dp"
                    android:paddingLeft="15dp"
                    android:text="Заявки на транспорт"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:translationZ="2dp"
                    android:visibility="visible"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="1dp"
                    app:cornerRadius="15dp"
                    app:iconGravity="textStart"
                    app:rippleColor="@color/design_default_color_on_secondary"
                    app:strokeColor="#EEEDEF"
                    app:strokeWidth="1dp" />



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/КнопкаСогласование"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/КнопкаПоступлениеМатериалов"


                    android:layout_centerInParent="true"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:drawableLeft="@drawable/icon_compelte_dashbord"
                    android:fontFamily="@font/alfa_slab_one"
                    android:gravity="center"
                    android:minHeight="70dp"
                    android:paddingLeft="15dp"
                    android:text="Согласование"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:translationZ="2dp"
                    android:visibility="visible"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="1dp"
                    app:cornerRadius="15dp"
                    app:iconGravity="textStart"
                    app:rippleColor="@color/design_default_color_on_secondary"
                    app:strokeColor="#EEEDEF"
                    app:strokeWidth="1dp" />





                <com.google.android.material.button.MaterialButton
                    android:id="@+id/КнопкаСогласЦен"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/КнопкаПоступлениеМатериалов"


                    android:layout_centerInParent="true"

                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:backgroundTint="#FFFFFF"
                    android:drawableLeft="@drawable/icon_app_money"
                    android:fontFamily="@font/alfa_slab_one"
                    android:gravity="center"
                    android:minHeight="70dp"
                    android:paddingLeft="15dp"
                    android:text="Согласования цен"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:translationZ="2dp"
                    android:visibility="visible"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="1dp"
                    app:cornerRadius="15dp"
                    app:iconGravity="textStart"
                    app:rippleColor="@color/design_default_color_on_secondary"
                    app:strokeColor="#EEEDEF"
                    app:strokeWidth="1dp" />






















                <com.google.android.material.button.MaterialButton
                    android:id="@+id/КнопкаПоступлениеМатериалов"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/КнопкаТабель"


                    android:layout_centerInParent="true"


                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"

                    android:backgroundTint="#FFFFFF"
                    android:drawableLeft="@drawable/icon_get_material_dashboard"
                    android:fontFamily="@font/alfa_slab_one"
                    android:gravity="center"
                    android:minHeight="70dp"
                    android:paddingLeft="15dp"
                    android:text="Поступление  материалов"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:translationZ="2dp"
                    android:visibility="visible"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="1dp"
                    app:cornerRadius="15dp"
                    app:iconGravity="textStart"
                    app:rippleColor="@color/design_default_color_on_secondary"
                    app:strokeColor="#EEEDEF"
                    app:strokeWidth="1dp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/КнопкаТабель"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="30dp"
                    android:backgroundTint="#FFFFFF"
                    android:drawableLeft="@drawable/icon_tabel_dashbord"
                    android:fontFamily="@font/alfa_slab_one"
                    android:gravity="center"
                    android:minHeight="70dp"
                    android:paddingLeft="15dp"
                    android:text="Табель"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:translationZ="2dp"
                    android:visibility="visible"
                    app:cardElevation="2dp"
                    app:cardMaxElevation="1dp"
                    app:cornerRadius="15dp"
                    app:iconGravity="textStart"
                    app:rippleColor="@color/design_default_color_on_secondary"
                    app:strokeColor="#EEEDEF"
                    app:strokeWidth="1dp" />





            </LinearLayout>

        </androidx.core.widget.NestedScrollView>




    </TableRow>

</TableLayout>










