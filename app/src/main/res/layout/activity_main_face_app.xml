<?xml version="1.0" encoding="utf-8"?>


<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_faceapp_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="left"
    android:background="#FFFFFF"
    tools:context=".For_Code_Settings_DSU1.MainActivity_Face_App">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_faceapp22"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:foregroundGravity="center"
        android:scrollbars="vertical">


        <ImageView
            android:id="@+id/imageView_ЗначекApp"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="10dp"
            android:foregroundGravity="center_vertical"
            android:scaleType="centerCrop"
            android:stateListAnimator="@android:animator/fade_in"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@mipmap/icon_dsu1_for_mains_menu_faceapp111"
            tools:src="@tools:sample/avatars" />


        <ScrollView
            android:id="@+id/ScrollFaceApp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageView_ЗначекApp">

            <LinearLayout
                android:id="@+id/LineLayFaceApp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="visible">




                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardview2_For_MainActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:animateLayoutChanges="true"
                    android:checkable="true"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="150dp"
                    android:singleLine="false"
                    android:textSize="10sp"
                    android:gravity="center"
                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeColor="#FFFFFF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="100dp"
                    app:strokeWidth="0dp"
                    android:translationZ="15dp"
                    >

                    <RelativeLayout
                        android:id="@+id/relativelayoutcardviewmatirealMainActityt2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        android:paddingTop="2dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="2dp">

                        <TextView
                            android:id="@+id/text2_inner_ardview_forMainActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:minHeight="200dp"
                            android:text="Табель"
                            android:textAlignment="gravity"
                            android:textAppearance="?android:attr/textAppearanceListItemSmall"
                            android:textColor="#000000"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <ProgressBar
                            android:id="@+id/prograessbarTabel_inner_ardview_forMainActivity"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:indeterminate="true"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/imageview_cardview_for_tabel_2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignLeft="@+id/text2_inner_ardview_forMainActivity"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="5dp"
                            app:srcCompat="@drawable/icon_dsu1_for_mainactivity_tabel2" />


                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>





                <!--todo тестовый дополнительная кнопка чат-->




                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardviewCommitPay_For_MainActivity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:animateLayoutChanges="true"
                    android:checkable="true"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="150dp"
                    android:singleLine="false"
                    android:textSize="10sp"


                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeColor="#FFFFFF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="100dp"
                    app:strokeWidth="0dp"
                    android:translationZ="15dp">

                    <RelativeLayout
                        android:id="@+id/relativelayoutcardviewmatirealMainActityt4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:paddingTop="2dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="2dp">

                        <TextView
                            android:id="@+id/text4_inner_ardview_forMainActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:minHeight="200dp"
                            android:text="Согласование"
                            android:textAlignment="gravity"
                            android:textAppearance="?android:attr/textAppearanceListItemSmall"
                            android:textColor="#000000"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:visibility="visible" />

                        <ProgressBar
                            android:id="@+id/prograessbarCommitPay_inner_ardview_forMainActivity4"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:indeterminate="true"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/imageview_cardview_for_tabel_4"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignLeft="@+id/text4_inner_ardview_forMainActivity"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="5dp"
                            app:srcCompat="@drawable/icon_dsu1_commit_pays" />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>







                <!--todo кнопка контроль достпупа -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardviewControlAccess"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:animateLayoutChanges="true"
                    android:checkable="true"
                    android:gravity="center"
                    android:textAlignment="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:minHeight="150dp"
                    android:singleLine="false"
                    android:textSize="10sp"


                    app:cardBackgroundColor="#FFFFFF"
                    app:strokeColor="#FFFFFF"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="10dp"
                    app:cardMaxElevation="100dp"
                    app:strokeWidth="0dp"
                    android:translationZ="15dp">

                    <RelativeLayout
                        android:id="@+id/relativelayoutcardviewcardviewControlAccess"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="2dp"
                        app:cardBackgroundColor="#FFFFFF"
                        android:paddingTop="2dp"
                        android:paddingRight="2dp"
                        android:paddingBottom="2dp">

                        <TextView
                            android:id="@+id/text8_inner_cardviewControlAccess"
                            android:layout_width="200dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentBottom="true"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginEnd="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:minHeight="200dp"
                            android:text="    Поступление \n материалов"
                            android:textAlignment="gravity"
                            android:textAppearance="?android:attr/textAppearanceListItemSmall"
                            android:textColor="#000000"
                            android:textSize="19sp"
                            android:textStyle="bold"
                            android:visibility="visible" />



                        <ProgressBar
                            android:id="@+id/prograessbarControlAccess"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:indeterminate="true"
                            android:visibility="invisible" />

                        <ImageView
                            android:id="@+id/imageview_ControlAccess"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignLeft="@+id/text8_inner_cardviewControlAccess"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:paddingLeft="5dp"
                            app:srcCompat="@drawable/icon_dsu1_postubleniymaterialov" />

                    </RelativeLayout>
                </com.google.android.material.card.MaterialCardView>



            </LinearLayout>


        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigator_faceapp_main"
        android:layout_width="230dp"
        android:background="#FFFFFF"
        android:layout_gravity="left"
        android:layout_height="match_parent"
        android:layout_marginRight="160dp"
        android:fitsSystemWindows="true"
        app:itemIconSize="35dp"
        app:itemIconTint="#00ACC1"
        app:itemTextColor="@color/cardview_dark_background"
        app:menu="@menu/menu_for_faceapp_navigationview"
        tools:ignore="MissingConstraints">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>