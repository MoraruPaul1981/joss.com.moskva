<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_main_faceasync"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:padding="5dp"
        android:backgroundTint="@color/cardview_light_background"
        tools:context=".Settings.MainActivity_Visible_Async">


        <ImageView
            android:id="@+id/imageView_icon_asynsapp"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:foregroundGravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="20dp"
            android:background="#C62828"
            android:stateListAnimator="@android:animator/fade_in"
            android:visibility="visible"
            app:srcCompat="@drawable/icon_dsu1_async_asynprograssbar"
            tools:src="@tools:sample/avatars" />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/LineLayFaceApp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:backgroundTint="@color/cardview_light_background"
        android:gravity="center"
        android:visibility="visible"
        android:layout_margin="5dp"
        android:padding="5dp"
        tools:layout_editor_absoluteX="5dp"
        tools:layout_editor_absoluteY="5dp">

        <ProgressBar
            android:id="@+id/progressBar4ПоКругуСинхронизации"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="100dp"
            android:layout_height="115dp"
            android:layout_marginStart="120dp"
            android:layout_marginEnd="120dp"
            android:indeterminate="false"
            android:max="100"
            android:padding="5dip"
            android:progress="0"
            android:progressDrawable="@drawable/brograssbarnews2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.22000003" />

        <TextView
            android:id="@+id/TextViewДляProgressBarГлавнойСинхронизации"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:fontFamily="@font/archivo_black"
            android:gravity="center_horizontal|center_vertical"
            android:minWidth="30dp"
            android:padding="1dp"
            android:textAlignment="center"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/progressBar4ПоКругуСинхронизации"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/progressBar4ПоКругуСинхронизации" />


        <TextView
            android:id="@+id/textViewТекущийПользовательПРиВизуальнойСинхронизации"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-condensed-light"
            android:textAlignment="center"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/TExtViewНазваниеКонторыСнизуСинх"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/TExtViewНазваниеКонторыСнизуСинх"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="60dp"
            android:fontFamily="sans-serif-condensed-light"
            android:minWidth="40dp"
            android:textAlignment="center"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>







