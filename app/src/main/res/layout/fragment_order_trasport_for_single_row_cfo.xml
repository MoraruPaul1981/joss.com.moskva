<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardveiw_otsinglerow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_gravity="center"
    app:cardCornerRadius="0dp"
    app:cardElevation="10dp"
    app:cardMaxElevation="5dp"
    app:strokeWidth="1dp"
    android:translationZ="100dp"
    android:animateLayoutChanges="true"
    android:background="#F0FFFF"
    app:cardBackgroundColor="#F0FFFF"
    app:strokeColor="#316E6E"
    tools:context=".CodeOrdersAnTransports.Window.MainActivityOrdersTransports">
    <!--  НАЧАЛО ПЕРВОГО БЛОКА -->
        <TableLayout
            android:id="@+id/tablelayout_singleotrow_cfo"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F0FFFF"
            android:gravity="center_horizontal|center_vertical"
            android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
            tools:context=".CodeOrdersAnTransports.Window.MainActivityOrdersTransports">
            <!--//TODO начало    строчки ЦФО-->
            <TableRow
                android:id="@+id/tableRowChildOtCFO"
                android:layout_width="match_parent"
                android:gravity="center_vertical|center_horizontal"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/materialcardview_get_cfo_for_ot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_gravity="center"
                    app:cardCornerRadius="0dp"
                    app:cardElevation="0dp"
                    app:cardMaxElevation="10dp"
                    app:strokeWidth="0dp"

                     android:layout_margin="10dp"
                     android:padding="2dp"

                    android:translationZ="100dp"
                    android:animateLayoutChanges="true"
                    android:background="#F0FFFF"
                    app:cardBackgroundColor="#F0FFFF"
                    app:strokeColor="#316E6E"
                    android:checkable="true"
                    android:clickable="true"
                    android:focusable="true">







                <LinearLayout
                    android:id="@+id/linearlayout_otsinglerow"
                    android:layout_column="0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#F0FFFF"
                    android:gravity="center"
                    tools:context=".CodeOrdersAnTransports.Window.MainActivityOrdersTransports"
                    android:orientation="vertical">
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ot_key_order_singlevalue"
                    android:layout_column="0"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="1dp"
                    android:hint="Цфо"
                    android:text="Цфо"
                    android:textSize="14sp"
                    android:textColor="#F0FFFF"
                    android:padding="1dp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/style_for_akaz_trasport1"
                    android:gravity="center"
                    android:visibility="visible"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:srcCompat="@drawable/icon_ordertransportorder1"
                    app:strokeColor="#F5FFFA" />
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/ot_date_order_singlevalue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="20dp"
                    android:background="@drawable/stylesingletablerowiine10"
                    android:checkMark="?android:attr/textCheckMark"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:layout_marginBottom="1dp"
                    android:layout_marginTop="1dp"
                    android:hint="цфо"
                    android:textAlignment="gravity"
                    android:textAppearance="?android:attr/textAppearanceListItemSmall"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="10dp"
                    app:strokeColor="#F5FFFA"
                    android:animateLayoutChanges="true"
                    android:visibility="visible"/>


<!--
//TODOвтуртерий  tableyout-->
                    <TableLayout
                        android:id="@+id/tablelayout_singleotrow_cfo_bnytri"
                        android:shrinkColumns="*"
                        android:stretchColumns="*"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#F0FFFF"
                        android:gravity="center_horizontal|center_vertical"
                        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                        tools:context=".CodeOrdersAnTransports.Window.MainActivityOrdersTransports">
                    </TableLayout>

                 </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </TableRow>
            <!--//TODO начало    строчки ТС-->
            <!--//TODO конец первой строки Названия -->
        </TableLayout>
</com.google.android.material.card.MaterialCardView>






