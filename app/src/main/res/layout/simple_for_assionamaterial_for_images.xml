<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/simple_task_for_Tasks"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    android:background="#FFFFFF"
    tools:context=".AdmissionMaterials.Window.MainActivity_AdmissionMaterials">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/materialcardView_for_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="250dp"
        android:checkable="true"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:clickable="false"
        android:singleLine="false"
        android:focusable="true"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp"
        android:translationZ="10dp"
        app:strokeWidth="2dp"
        app:cardBackgroundColor="#FFFFFF"
        app:strokeColor="#F0FFFF"
        android:animateLayoutChanges="true">
            <TableLayout
                android:id="@+id/tableLayout_material_image"
                android:stretchColumns="*"
                android:shrinkColumns="*"
                android:minHeight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                app:cardBackgroundColor= "#FFFFFF"
                android:backgroundTint= "#FFFFFF"
                android:layout_margin="1dp">
            </TableLayout>
    </com.google.android.material.card.MaterialCardView>
</LinearLayout>