<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:id="@+id/fragment_commit_documents"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_gravity="center"
    app:cardCornerRadius="1dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="10dp"
    app:strokeWidth="1dp"
    android:translationZ="10dp"
    android:animateLayoutChanges="true"
    app:cardBackgroundColor="#FFFFFF"
    app:strokeColor="#FFD5D9DA"
    android:checkable="true"
    android:clickable="true"
    android:focusable="true"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    tools:context=".CommitDocuments.View.Window.ActivityCommitDocuments">




    <TableLayout
        android:id="@+id/tableLayout_commintdocument"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:collapseColumns="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:gravity="center">


        <!--//TODO   НАЧАЛО ПЕРВАЯ СТРОЧКА ROW #1-->
        <TableRow
            android:id="@+id/tableRow_commintprices1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:minHeight="35dp">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/TextView"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_column="0"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="70dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="2dp"
                android:background="@drawable/style_for_newstypespinners_ietm11"
                android:gravity="center"
                android:minHeight="25dp"
                android:padding="2dp"
                android:text="Согласование документов"
                android:textColor="#0E0E0E"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="visible"

                app:fontFamily="@font/faster_one"
                tools:ignore="MissingConstraints,RtlCompat" />


        </TableRow>


        <!--//TODO   НАЧАЛО ПЕРВАЯ СТРОЧКА ROW #1-->
        <TableRow
            android:id="@+id/tableRow_commintpricessearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:background="@drawable/disayn_line_tablerow6">

            <androidx.appcompat.widget.SearchView
                android:id="@+id/searchview_commintingprices"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:padding="2dp"
                android:background="@drawable/style_for_newstypespinners_ietm7"
                android:checkMark="?android:attr/listChoiceIndicatorSingle"
                android:gravity="center_vertical|center_horizontal"
                android:paddingStart="?android:attr/listPreferredItemPaddingStart"
                android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
                android:queryHint="Поиск..."
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textSize="15dp"
                android:textStyle="bold"
                android:visibility="gone" />

        </TableRow>




     <!--   //TODO TABlayout-->
        <!--//TODO   НАЧАЛО ПЕРВАЯ СТРОЧКА ROW #1-->
        <TableRow
            android:id="@+id/tableRow_commitdocumenttablayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:minHeight="20dp">

           <com.google.android.material.tabs.TabLayout
               android:id="@+id/commitdocumenttablayout"
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:layout_margin="2dp"
               android:background="@drawable/style_for_newstypespinners_ietm11"
               android:translationZ="1dp"
               app:tabMode="fixed"
               app:tabTextColor="#686464"
               app:tabSelectedTextColor="#000000"
               app:tabIndicatorColor="#CFCCCC">



               <com.google.android.material.tabs.TabItem
                   android:id="@+id/commitdocumenttabitem1"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="приказы">
               </com.google.android.material.tabs.TabItem>



               <com.google.android.material.tabs.TabItem
                   android:id="@+id/commitdocumenttabitem2"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="служебные записки">
               </com.google.android.material.tabs.TabItem>


               <com.google.android.material.tabs.TabItem
                   android:id="@+id/commitdocumenttabitem3"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="разое">
               </com.google.android.material.tabs.TabItem>


           </com.google.android.material.tabs.TabLayout>


        </TableRow>








        <!--//TODO   НАЧАЛО ПЕРВАЯ СТРОЧКА ROW #2-->
        <TableRow
            android:id="@+id/tableRow_commintprices2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center_horizontal"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:minHeight="35dp">


            <RelativeLayout
                android:layout_column="0"
                android:id="@+id/recyreview_commintingprices"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:orientation="vertical"
                android:background="#FFFFFF">



                <!-- <androidx.core.widget.NestedScrollView
                     android:layout_width="match_parent"
                     android:layout_height="0dp"
                     android:layout_above="@+id/prograessbar_commintingprices"
                     android:layout_below="@+id/searchview_commintingprices"
                     android:layout_centerHorizontal="true"
                     android:background="#FFFFFF"
                     android:visibility="visible"
                     tools:ignore="MissingConstraints">-->


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycleview_comminingpprices"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_above="@+id/prograessbar_commintingprices"

                    android:layout_alignParentTop="true"

                    android:layout_centerInParent="true"
                    android:layout_marginStart="1dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="1dp"
                    android:background="#FFFFFF"
                    android:padding="1dp"
                    android:visibility="visible"
                    tools:ignore="MissingConstraints" />

                <!--          </androidx.core.widget.NestedScrollView>-->


                <ProgressBar
                    android:id="@+id/prograessbar_commintingprices"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:layout_above="@+id/bottomnavigationw_commintingprices"
                    android:layout_centerHorizontal="true"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:indeterminate="true"
                    android:indeterminateTint="#CFCCCC"
                    android:padding="1dp"
                    android:scaleX="1"
                    android:scaleY="3"
                    android:visibility="visible" />


                <com.google.android.material.bottomnavigation.BottomNavigationView
                    android:id="@+id/bottomnavigationw_commintingprices"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"

                    android:layout_marginStart="20dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:padding="2dp"

                    android:background="@drawable/style_for_newstypespinners_ietm21"

                    android:scrollbarFadeDuration="@integer/config_navAnimTime"
                    android:translationZ="1dp"
                    app:itemIconTint="#0E0E0E"
                    app:menu="@menu/manu_navigator_buttom_for_comminingprices"
                    app:popupTheme="@style/fortasknavigator"
                    tools:ignore="MissingConstraints" />
            </RelativeLayout>
        </TableRow>

    </TableLayout>
</com.google.android.material.card.MaterialCardView>