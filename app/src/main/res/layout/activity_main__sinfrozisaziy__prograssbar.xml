<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout_async_prograsser"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:openDrawer="left"
    android:visibility="visible"
    android:background="#FFFFFF"
    android:backgroundTint="@color/cardview_light_background"
    tools:context=".For_Code_Settings_DSU1.MainActivity_Visible_Async">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_asynsprograsser"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:foregroundGravity="center"
        android:backgroundTint="@color/cardview_light_background"
        tools:context=".For_Code_Settings_DSU1.MainActivity_Visible_Async"
        android:scrollbars="vertical">


        <ImageView
            android:id="@+id/imageView_icon_asynsapp"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="10dp"
            android:foregroundGravity="center_vertical"
            android:scaleType="centerCrop"
            android:stateListAnimator="@android:animator/fade_in"
            android:visibility="visible"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/icon_dsu1_async_asynprograssbar"
            tools:src="@tools:sample/avatars" />


        <ScrollView
            android:id="@+id/ScrollFaceApp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="#FFFFFF"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="@color/cardview_light_background"
            tools:context=".For_Code_Settings_DSU1.MainActivity_Visible_Async"
            app:layout_constraintTop_toBottomOf="@id/imageView_icon_asynsapp">


                <LinearLayout
                    android:id="@+id/LineLayFaceApp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="#FFFFFF"
                    android:backgroundTint="@color/cardview_light_background"
                    android:visibility="visible">

                    <ProgressBar
                        android:id="@+id/progressBar4ПоКругуСинхронизации"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:layout_width="100dp"
                        android:layout_height="115dp"
                        android:layout_marginStart="120dp"
                        android:layout_marginTop="90dp"
                        android:layout_marginEnd="120dp"
                        android:indeterminate="false"
                        android:padding="5dip"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/brograssbarnews2" />

                    <TextView
                        android:id="@+id/TextViewДляProgressBarГлавнойСинхронизации"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="2dp"
                        android:layout_marginTop="-70dp"
                        android:fontFamily="@font/archivo_black"
                        android:gravity="center_horizontal|center_vertical"
                        android:minWidth="30dp"
                        android:padding="1dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:visibility="visible" />


                    <ProgressBar
                        android:id="@+id/progressBar3ГоризонтальныйСинхронизации"
                        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:minWidth="100dp"
                        android:layout_height="11dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        android:indeterminateTint="#D81B60"
                        android:layout_marginTop="400dp"
                        android:indeterminateTintMode="src_in" />


                    <TextView
                        android:id="@+id/textViewТекущийПользовательПРиВизуальнойСинхронизации"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        android:layout_marginEnd="50dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textAlignment="center"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TExtViewНазваниеКонторыСнизуСинх"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minWidth="40dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif-condensed-light"
                        android:textAlignment="center"
                        android:textSize="12sp"
                        android:textStyle="bold" />




                </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigator_asyncapp"
        android:layout_width="230dp"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_gravity="left"
        android:layout_marginRight="160dp"
        android:fitsSystemWindows="true"
        app:itemIconSize="35dp"
        app:itemIconTint="#00ACC1"
        android:visibility="gone"
        android:backgroundTint="@color/cardview_light_background"
        app:itemTextColor="@color/cardview_dark_background"
        app:menu="@menu/menu_for_asynsapp_navigationview">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>
