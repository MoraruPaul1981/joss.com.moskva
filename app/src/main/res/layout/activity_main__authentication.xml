<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTintMode="screen"
    android:foregroundGravity="center"
    android:visibility="visible"
    app:layout_collapseMode="pin"
    android:saveEnabled="false"
    app:layout_scrollFlags="snapMargins|scroll|enterAlways|enterAlwaysCollapsed|exitUntilCollapsed|snap"
    tools:context=".For_Code_Settings_DSU1.MainActivity_Tabels_Users_And_Passwords"
    tools:layout_editor_absoluteY="-97dp">

    <ScrollView
        android:id="@+id/ScrollViewАкнтификации"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent"></ScrollView>


    <ImageView
        android:id="@+id/textViewНастройки"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="210dp"
        android:adjustViewBounds="false"
        android:textSize="34sp"
        android:textStyle="bold"
        android:typeface="monospace"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/icon_boot_dsu1_1" />



    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:background="#00ACC1"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewНастройки" />

    <ProgressBar
        android:id="@+id/progressBarДляWIFI"
        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Small.Inverse"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="50dp"
        android:foregroundGravity="center"
        android:indeterminateTint="@color/colorAccent"
        android:max="100"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/КнопкаВходаВПриложение"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ПарольДляВходавПрограмму"
        app:layout_constraintVertical_bias="0.233" />

    <Button
        android:id="@+id/КнопкаВходаВПриложение"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#00ACC1"
        android:backgroundTintMode="screen"
        android:clickable="true"
        android:focusable="auto"
        android:fontFamily="sans-serif-medium"
        android:foregroundGravity="center"
        android:gravity="center|center_vertical"
        android:scrollbarStyle="outsideInset"
        android:text="Вход"
        android:textColor="#0E0E0E"
        android:textSize="14sp"
        android:textStyle="bold"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
        android:typeface="normal"
        android:visibility="visible"
        app:cornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ПарольДляВходавПрограмму"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/style_forpolymaterialb_cycle_passwords"
        android:drawableLeft="@drawable/icon_dsu1_passwors_login"
        android:drawablePadding="10dp"
        android:foregroundGravity="left"
        android:gravity="center_vertical"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:minHeight="40dp"
        android:paddingStart="10dp"
        android:textColor="#0E0E0E"
        android:textColorHint="#00ACC1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:endIconMode="password_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ИмяДляВходавПрограмму" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/ИмяДляВходавПрограмму"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/style_forpolymaterialb_cycle_passwords"
        android:drawableLeft="@drawable/icon_dsu1_login_name_3"
        android:drawablePadding="10dp"
        android:foregroundGravity="left"
        android:gravity="center_vertical"
        android:hint="Логин"
        android:inputType="textPersonName"
        android:minHeight="40dp"
        android:paddingStart="10dp"
        android:textColor="#0E0E0E"
        android:textColorHint="#00ACC1"
        android:textSize="16sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:visibility="visible"
        app:endIconMode="password_toggle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view4" />

</androidx.constraintlayout.widget.ConstraintLayout>