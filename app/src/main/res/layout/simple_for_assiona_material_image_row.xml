<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/TableLayoutAdmissionLayoutInflater_row"
    android:shrinkColumns="*"
    android:stretchColumns="*"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|center_vertical"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    android:background="#F5FFFA"
    tools:context=".AdmissionMaterials.Window.MainActivity_AdmissionMaterials">




    <TableRow
        android:id="@+id/tablerow_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical|center_horizontal"
        android:minHeight="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_span="3"
            android:background="#FFFFFF"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textview_imagename"
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_span="3"
                android:background="@drawable/style_forpolymaterial_image_row"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="#"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="10sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:cardCornerRadius="1dp"
                app:cardElevation="5dp"
                app:strokeColor="#F5FFFA" />




            <ImageView
                android:id="@+id/image_binary"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="350dp"
                android:layout_span="3"
                android:background="#F0FFFF"
                android:layout_margin="1dp"
                android:padding="1dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                app:cardCornerRadius="1dp"
                app:cardElevation="5dp" />


        </LinearLayout>
    </TableRow>


















</TableLayout>