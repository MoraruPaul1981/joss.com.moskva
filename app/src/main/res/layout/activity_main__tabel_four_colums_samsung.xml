<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ГлавныйВерхнийКонтейнер"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5FFFA"
    android:backgroundTintMode="screen"
    android:clickable="false"
    android:drawingCacheQuality="auto"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:persistentDrawingCache="scrolling"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    android:touchscreenBlocksFocus="false"
    app:layout_collapseMode="pin"
    app:layout_gravity="center_horizontal"
    app:layout_scrollFlags="snapMargins|scroll|enterAlways|enterAlwaysCollapsed|exitUntilCollapsed|snap"
    tools:context=".Code_ForTABEL.MainActivity_List_Peoples"
    tools:visibility="visible">


    <TextView
        android:id="@+id/textViewJОбщееКоличествоСотрудниковВТабеле"
        android:layout_width="140dp"
        android:layout_height="15dp"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="3dp"
        android:background="#F5FFFA"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-light"
        android:foregroundGravity="center_vertical|center_horizontal"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="12sp"
        android:textStyle="bold"
        android:touchscreenBlocksFocus="false"
        android:typeface="sans"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/view2Линия"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView_FaceApp4"
        app:layout_constraintTop_toBottomOf="@+id/СпинерТабельМесяц" />

    <Button
        android:id="@+id/imageViewСтрелкаВнутриТабеля"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginStart="1dp"
        android:layout_marginBottom="1dp"
        android:backgroundTint="#F5FFFA"
        android:backgroundTintMode="screen"
        android:stateListAnimator="@drawable/icon_dsu1_exit3_foreground"
        android:textAlignment="center"
        android:visibility="visible"
        app:icon="@drawable/icon_dsu1_exit3_foreground"
        app:iconGravity="textEnd"
        app:iconSize="40dp"
        app:iconTint="#00ACC1"
        app:layout_constraintBottom_toBottomOf="@id/view2Линия"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rippleColor="@color/colorAccent" />

    <Spinner
        android:id="@+id/СпинерТабельМесяц"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:layout_width="140dp"
        android:layout_height="15dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="#F5FFFA"
        android:backgroundTintMode="multiply"
        android:clickable="false"
        android:dropDownWidth="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:gravity="center|center_horizontal"
        android:textColor="@android:color/white"
        android:textSize="10sp"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        android:touchscreenBlocksFocus="false"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/textViewJОбщееКоличествоСотрудниковВТабеле"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toEndOf="@+id/imageView_FaceApp4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:visibility="visible" />

    <Spinner
        android:id="@+id/СпинерТабельДепратамент"
        style="@android:style/Widget.Holo.Light.Spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:background="#F5FFFA"
        android:backgroundTintMode="multiply"
        android:clickable="false"
        android:dropDownWidth="wrap_content"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:foregroundGravity="center_horizontal"
        android:gravity="center_horizontal"
        android:popupBackground="@color/actionbar_text_color"
        android:textColor="@android:color/white"
        android:textSize="10dp"
        android:theme="@style/Theme.AppCompat.DayNight.DarkActionBar"
        android:touchscreenBlocksFocus="false"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imageButtonНазадПоСотрудникамВТАбеле"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/imageButtonДвижениеПоСотрудникамВТАбеле" />

    <TextView
        android:id="@+id/textView3СловоТабель"
        style="@style/Widget.MaterialComponents.MaterialCalendar.DayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="6dp"
        android:background="#F5FFFA"
        android:bufferType="normal"
        android:capitalize="characters"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:fontFamily="sans-serif-light"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Табель"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="#0E0E0E"
        android:textSize="20sp"
        android:textStyle="bold"
        android:theme="@style/Theme.AppCompat.DayNight"
        android:touchscreenBlocksFocus="false"
        android:typeface="monospace"
        app:layout_constraintStart_toEndOf="@+id/imageViewСтрелкаВнутриТабеля"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_FaceApp4"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="2dp"
        android:background="#F5FFFA"
        android:foregroundGravity="center"
        android:scaleType="centerCrop"
        android:stateListAnimator="@android:animator/fade_in"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/view2Линия"
        app:layout_constraintStart_toEndOf="@+id/textView3СловоТабель"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icon_dsu1_sam_tabel11"
        tools:src="@tools:sample/avatars" />

    <View
        android:id="@+id/view2Линия"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="8dp"
        android:background="#00ACC1"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:foregroundGravity="center"
        android:touchscreenBlocksFocus="false"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3СловоТабель"
        tools:visibility="visible" />

    <ScrollView
        android:id="@+id/ScrollViewСамТабеля"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#F5FFFA"
        android:drawingCacheQuality="auto"
        android:foregroundGravity="center_horizontal"
        android:orientation="horizontal"
        android:overScrollMode="always"
        android:scrollbarAlwaysDrawHorizontalTrack="true"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="horizontal|vertical"
        android:visibility="visible"
        app:layout_collapseMode="pin"
        app:layout_constraintBottom_toTopOf="@id/СпинерТабельДепратамент"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view2Линия"
        app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">


        <LinearLayout
            android:id="@+id/ГлавныйКонтейнерТабель"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#F5FFFA"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible"
            app:layout_collapseMode="pin"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <!--  СЮДА ВСТАВЛЯЕМ ЦИКЛОМ СГЕНЕРИРОВАНЫЙ ВНЕШНИЙ ВИД В ЦИКЛЕ DO WHILE-->
        </LinearLayout>


    </ScrollView>

    <ImageButton
        android:id="@+id/imageButtonДвижениеПоСотрудникамВТАбеле"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:background="#F5FFFA"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScrollViewСамТабеля"
        app:srcCompat="@drawable/icon_dsu1_singlescroll_forfartbest" />

    <ImageButton
        android:id="@+id/imageButtonНазадПоСотрудникамВТАбеле"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:background="#F5FFFA"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ScrollViewСамТабеля"
        app:srcCompat="@drawable/icon_dsu1_singlescroll_tbest" />


</androidx.constraintlayout.widget.ConstraintLayout>