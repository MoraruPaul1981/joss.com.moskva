<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/simple_task_for_chatwriteandread"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    tools:context=".Code_For_Tasks_КодДля_Задания.MainActivity_Tasks">

    <com.google.android.material.card.MaterialCardView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_margin="5dp"
        android:layout_weight="2"
        android:checkable="true"
        android:clickable="true"
        android:singleLine="false"
        android:focusable="true"
        android:textSize="10sp"
        app:cardBackgroundColor="#E0FFFF"


        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:strokeColor="#F5FFFA"
        app:cardMaxElevation="100dp"
        app:strokeWidth="0dp"
        android:translationZ="150dp"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/relativelayoutcardviewmatirealtask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">


          <!--  //TODO первый блок -->


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text1_samo_message_chat"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:enabled="true"
                android:foregroundGravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:hint="само сообщение"
                android:inputType="textMultiLine|textCapSentences|textNoSuggestions"
                android:minHeight="30dp"
                android:singleLine="false"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <View
                android:id="@+id/line_message_chat"
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_height="2dp"
                android:layout_below="@+id/text1_samo_message_chat"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="40dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="40dp"

                android:background="#95A5A6" />


            <!--  //TODO  конец  первый блок -->

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text2_kto_write_messages"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_message_chat"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:enabled="true"
                android:foregroundGravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:hint="кто фио"
                android:inputType="textMultiLine|textCapSentences|textNoSuggestions"
                android:minWidth="100dp"
                android:minHeight="25dp"
                android:singleLine="false"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text3_bremy_message_chat"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line_message_chat"
                android:layout_alignRight="@+id/text2_kto_write_messages"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:drawableEnd="@drawable/icon_dsu1_for_task_line"
                android:drawablePadding="10sp"
                android:enabled="true"
                android:foregroundGravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:hint="время"
                android:inputType="textMultiLine|textCapSentences|textNoSuggestions"
                android:minWidth="50dp"
                android:minHeight="25dp"
                android:singleLine="false"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="bold"
                android:visibility="visible"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp" />




        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>



</LinearLayout>