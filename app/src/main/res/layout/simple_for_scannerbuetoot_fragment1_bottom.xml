<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragmentuserscanner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:minHeight="600dp"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    tools:context=".VIEW.FragmentScannerUser">


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView5getstatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:lines="2"
        android:minWidth="150dp"
        android:minHeight="50dp"
        android:padding="5dp"
        android:text="Статус"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bottomcontrolfragmen2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/textView4namestatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/icon_dsu1_scanner_status"
        android:gravity="center"
        android:minWidth="20dp"
        android:minHeight="40dp"
        android:padding="5dp"
        android:text="Последнее действие:"
        android:textColor="#309C98"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/bottomcontrolfragmen2"
        app:layout_constraintEnd_toStartOf="@+id/textView5getstatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottomcontrolfragmen2"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="68dp"
        android:clickable="true"
        android:focusable="auto"
        android:fontFamily="serif-monospace"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="5"
        android:singleLine="false"
        android:text="с работы"
        android:textAlignment="gravity"
        android:textColor="#0E0E0E"
        android:textSize="12sp"
        android:textStyle="bold"
        android:translationZ="150dp"
        android:typeface="normal"
        android:visibility="visible"
        app:backgroundTint="#009688"
        app:cardBackgroundColor="#9EAFB3"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"
        app:cardMaxElevation="150dp"
        app:cornerRadius='150dp'
        app:icon="@drawable/icon_dsu1_scannergattcrabot"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toTopOf="@+id/bottomcontrolfragmen1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#C62828"
        app:strokeColor="#F5FFFA"
        app:strokeWidth="0dp"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/bottomcontrolfragmen1"
        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginBottom="50dp"
        android:clickable="true"
        android:focusable="auto"
        android:fontFamily="serif-monospace"
        android:gravity="center_vertical|center_horizontal"
        android:maxLines="5"
        android:singleLine="false"
        android:text="На работу"
        android:textAlignment="gravity"
        android:textColor="#0E0E0E"
        android:textSize="12sp"
        android:textStyle="bold"
        android:translationZ="150dp"
        android:typeface="normal"
        android:visibility="visible"
        app:cardBackgroundColor="#9EAFB3"
        app:cardCornerRadius="10dp"
        app:cardElevation="40dp"
        app:cardMaxElevation="150dp"
        app:cornerRadius='150dp'
        app:icon="@drawable/icon_dus1_scanergattaprichot"
        app:iconGravity="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:rippleColor="#C62828"
        app:strokeColor="#F5FFFA"
        app:strokeWidth="0dp"
        tools:visibility="visible" />




</androidx.constraintlayout.widget.ConstraintLayout>