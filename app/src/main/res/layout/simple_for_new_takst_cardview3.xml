<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/simple_task_for_Tasks"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Code_For_Tasks_КодДля_Задания.MainActivity_Tasks">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardviewmatirealtask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="400dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
        android:layout_margin="1dp"
        android:layout_marginHorizontal="@+id/simple_task_for_Tasks"
        android:checkable="true"
        android:clickable="false"
        android:focusable="true"
        android:singleLine="false"
        android:textSize="10sp"
        app:cardBackgroundColor="#FFFAFA"
        app:cardCornerRadius="1dp"
        app:cardElevation="10dp"
        app:strokeColor="#F5FFFA"
        app:cardMaxElevation="100dp"
        app:strokeWidth="0dp"
        android:translationZ="150dp"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/relativelayoutcardviewmatirealtask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="2dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text1_innercardview"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="5dp"
                android:drawableStart="@drawable/icon_dsu1_create_message_for_tasks"
                android:foregroundGravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:hint="название нового задание !!!"
                android:inputType="textMultiLine|textCapSentences"
                android:minHeight="20dp"
                android:singleLine="false"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="normal"
                android:visibility="visible" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text3_innercardviewtree"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text1_innercardview"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="5dp"
                android:drawableStart="@drawable/icon_dsu1_create_message_for_tasks"
                android:gravity="center_vertical|center_horizontal"
                android:hint="сама задача !!!"
                android:inputType="textMultiLine|textCapSentences"
                android:minHeight="20dp"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="normal"
                android:visibility="visible" />


            <Spinner
                android:id="@+id/Spinner_innercardviewfour"
                style="@android:style/Widget.Holo.TextView.SpinnerItem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text3_innercardviewtree"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="5dp"
                android:gravity="center_horizontal"
                android:lineSpacingExtra="10sp"
                android:minHeight="30dp"
                android:spinnerMode="dropdown"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="normal"
                android:visibility="visible" />


            <SeekBar
                android:id="@+id/seekBar_for_tasks_create_new"
                style="@style/Widget.AppCompat.SeekBar.Discrete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Spinner_innercardviewfour"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="5dp"
                android:gravity="center_vertical|center_horizontal"
                android:max="4"
                android:minHeight="30dp"
                android:progress="0"
                android:stepSize="1"
                android:tickMark="@drawable/tasksseek_style"
                android:valueFrom="0"
                android:valueTo="5" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text2_innercardviewtwoSettasksType"
                style="@style/Widget.MaterialComponents.TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/seekBar_for_tasks_create_new"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="5dp"
                android:checkMark="?android:attr/textCheckMark"
                android:gravity="center_vertical|center_horizontal"
                android:hint="тип задачи"
                android:inputType="textMultiLine"
                android:minHeight="20dp"
                android:text="Одноразовая"
                android:textAlignment="gravity"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="#808080"
                android:textSize="15sp"
                android:textStyle="normal"
                android:visibility="visible" />


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text2_innercardviewtwo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text2_innercardviewtwoSettasksType"
                android:layout_alignParentLeft="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="5dp"
                android:checkMark="?android:attr/textCheckMark"
                android:gravity="center_vertical|center_horizontal"
                android:hint="номер задачи"
                android:inputType="textMultiLine"
                android:minHeight="20dp"
                android:text="#"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <!--   <com.google.android.material.button.MaterialButton-->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/BottomFor_New_Create_Task"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="100dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="100dp"
                android:layout_marginBottom="20dp"
                android:backgroundTintMode="screen"
                android:clickable="true"
                android:enabled="true"
                android:focusable="auto"
                android:fontFamily="sans-serif-medium"
                android:foregroundGravity="center"
                android:gravity="center|center_vertical"
                android:minHeight="30dp"
                android:text="Сохранить"
                android:textColor="#0E0E0E"
                android:textSize="12sp"
                android:textStyle="bold"
                android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                android:typeface="normal"
                android:visibility="visible"
                app:backgroundTint="#00E5FF"
                app:cornerRadius="20dp"
                tools:visibility="visible" />


            <!--     android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"-->
        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>