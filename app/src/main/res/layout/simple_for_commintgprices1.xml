<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_commingprices"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    app:strokeColor="#F2F6F6"
    app:cardMaxElevation="20dp"
    app:strokeWidth="1dp"
    android:translationZ="100dp"
    android:animateLayoutChanges="true"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    tools:context=".CommitingPrices.View.Window.MainActivityCommitingPrices">




    <TableLayout
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:gravity="center_horizontal|center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:gravity="center_vertical|center_horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">



               <!--TODO второая страка -->

                <com.google.android.material.textview.MaterialTextView
                    android:layout_column="0"

                    android:id="@+id/mTV_commitingprices_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginBottom="2dp"

                    android:padding="3dp"

                    android:layout_toLeftOf="@+id/arrow_nested_receriview"
                    android:background="@drawable/style_for_newstypespinners_ietm17"
                    android:gravity="center"

                    android:text="Value ЦФО"
                    android:textAlignment="gravity"
                    android:textColor="#000000"

                    android:textColorHint="#80807C"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:visibility="visible"

                    app:strokeColor="#F2F6F6"
                    app:cardMaxElevation="10dp"
                    app:strokeWidth="10dp"

                    app:fontFamily="sans-serif" />


                <com.google.android.material.button.MaterialButton

                    android:id="@+id/arrow_nested_receriview"
                    android:layout_width="38dp"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_alignParentRight="true"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="2dp"
                    android:backgroundTint="#FFFFFF"
                    android:fontFamily="@font/alegreya_sans_sc_thin"
                    android:stateListAnimator="@drawable/icon_for_commingpricesdown2"
                    android:textAlignment="center"
                    app:cardCornerRadius="50dp"
                    app:cardMaxElevation="5dp"
                    app:cornerRadius="20dp"
                    app:icon="@drawable/icon_for_commingpricesdown2"
                    app:iconGravity="textEnd"
                    app:iconPadding="1dp"
                    app:iconSize="20dp"
                    app:iconTint="#686565"
                    app:rippleColor="#F50057"
                    app:strokeColor="#F2F6F6"
                    app:strokeWidth="1dp"
                    tools:ignore="SpeakableTextPresentCheck" />
            </RelativeLayout>
        </TableRow>













        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center_horizontal">

            <ProgressBar
                android:id="@+id/progressbar_comminingprices"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_above="@+id/BottomNavigationView"
                android:layout_width="match_parent"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:indeterminateTint="#C2C4C5"
                android:layout_height="3dp"
                android:scaleY="4"
                android:scaleX="1"
                android:layout_centerHorizontal="true"
                android:indeterminate="true"
                android:visibility="gone" />

        </TableRow>




        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:gravity="center_vertical|center_horizontal">


            <androidx.recyclerview.widget.RecyclerView

                android:layout_column="0"

                android:id="@+id/recycleview_nesters_comminingpprices"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:layout_centerHorizontal="true"

                android:layout_margin="2dp"
                android:padding="2dp"

                android:addStatesFromChildren="false"
                android:background="#FFFFFF"

                android:foregroundGravity="center"

                android:scrollbars="horizontal|vertical"
                android:visibility="gone"
                tools:ignore="MissingConstraints" />


        </TableRow>




















        <!-- //todo КОНЕЦ  сторочек с самими данными-->

</TableLayout>


    </com.google.android.material.card.MaterialCardView>


