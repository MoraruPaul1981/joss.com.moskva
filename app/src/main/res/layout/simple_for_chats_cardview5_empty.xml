<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/simple_task_for_chatwriteandread"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    tools:context=".Code_For_Tasks_КодДля_Задания.MainActivity_Tasks">

    <com.google.android.material.card.MaterialCardView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="300dp"
        android:layout_margin="40dp"
        android:checkable="true"
        android:clickable="true"
        android:singleLine="false"
        android:focusable="true"
        android:textSize="10sp"
        app:cardBackgroundColor="#E0FFFF"


        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        app:strokeColor="#F5FFFA"
        app:cardMaxElevation="100dp"
        app:strokeWidth="0dp"
        android:translationZ="150dp"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/relativelayoutcardviewmatirealtask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">


          <!--  //TODO первый блок -->


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text1_samo_message_chat"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:enabled="true"
                android:foregroundGravity="center"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Начни чат"
                android:inputType="textMultiLine|textCapSentences|textNoSuggestions"
                android:minHeight="300dp"
                android:singleLine="false"
                android:textColor="#309C98"
                android:textSize="16sp"
                android:textStyle="bold"
                android:visibility="visible" />

            <View
                android:id="@+id/line_message_chat"
                android:layout_width="match_parent"
                app:cardCornerRadius="5dp"
                app:cardElevation="10dp"
                android:layout_height="2dp"
                android:layout_below="@+id/text1_samo_message_chat"
                android:layout_marginBottom="20dp"

                android:background="#95A5A6" />







        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>



</LinearLayout>