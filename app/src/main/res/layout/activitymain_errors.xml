<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Settings.MainActivity_Settings">


    <TextView
        android:id="@+id/textViewHeaderErrors"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:lineSpacingExtra="10sp"
        android:text="Ошибки"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/scrollView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.301" />

    <View
        android:id="@+id/viewForError"
        android:layout_width="160dp"
        android:layout_height="2dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="5dp"
        android:background="#FFD5D9DA"
        android:backgroundTint="#FFD5D9DA"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toTopOf="@+id/scrollView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewHeaderErrors"
        tools:ignore="MissingConstraints" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/imageViewBack"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#FFFFFF"
        android:backgroundTint="#FFFFFF"
        android:backgroundTintMode="screen"
        android:stateListAnimator="@drawable/icon_dsu1_exit3_foreground"
        android:textAlignment="center"
        android:visibility="visible"
        app:backgroundTint="#FFFFFF"
        app:icon="@drawable/icon_dsu1_exit3_foreground"
        app:iconGravity="textEnd"
        app:iconSize="40dp"
        app:iconTint="#FFD5D9DA"
        app:layout_constraintBottom_toBottomOf="@id/viewForError"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.263"
        app:rippleColor="#F50057" />





















    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialButtonОтправка"
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        android:background="@drawable/style_for_assitiionmatrial_create_name2"

        android:backgroundTint="#FFFFFF"
        android:fontFamily="@font/alfa_slab_one"
        android:gravity="center"
        android:minHeight="70dp"
        android:paddingLeft="15dp"
        android:text="Отправить"
        android:textColor="#000000"
        android:textSize="11sp"
        android:textStyle="normal"
        android:translationZ="2dp"
        android:visibility="visible"
        app:cardElevation="2dp"
        app:cardMaxElevation="1dp"
        app:cornerRadius="15dp"
        app:iconGravity="textStart"
        app:rippleColor="@color/design_default_color_on_secondary"
        app:strokeColor="#EEEDEF"
        app:strokeWidth="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView4"

        />







    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:layout_margin="2dp"
        android:padding="2dp"
        android:fadingEdge="horizontal|vertical"
        android:fillViewport="true"
        android:fitsSystemWindows="false"
        android:scrollbarStyle="outsideInset"
        android:scrollbars="horizontal|vertical"
        android:textAlignment="center"
        android:textDirection="firstStrong"
        android:touchscreenBlocksFocus="false"
        android:verticalScrollbarPosition="defaultPosition"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textViewAllError"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:padding="2dp"
            android:gravity="center"
            android:text="Данные..."
            android:orientation="vertical"
            android:overScrollMode="always"
            android:scrollbars="horizontal|vertical"
            android:textColor="#5B6161"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible"
            android:inputType="textMultiLine"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/scrollView4"
            app:layout_constraintTop_toTopOf="parent" />
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>


