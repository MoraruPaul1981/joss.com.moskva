<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/simple_task_for_commitpaylist1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#F5FFFA"
    android:orientation="vertical"
    android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
    tools:context=".Code_For_Tasks_КодДля_Задания.MainActivity_Tasks">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardviewmatirealtask"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:animateLayoutChanges="true"
        android:checkable="true"
        android:clickable="false"
        android:focusable="true"
        android:singleLine="false"
        android:textSize="10sp"
        android:theme="@style/Theme.MaterialComponents.DayNight.DarkActionBar"
        android:translationZ="10dp"
        app:cardBackgroundColor="#F0FFF0"
        app:cardCornerRadius="14dp"
        app:cardElevation="3dp"
        app:cardMaxElevation="4dp"
        app:strokeColor="#FFFAFA"
        app:strokeWidth="2dp">

        <RelativeLayout
            android:id="@+id/relativelayoutcardviewmatirealtask"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="2dp"
            android:paddingTop="2dp"
            android:paddingRight="2dp"
            android:paddingBottom="2dp">


            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/text2_innercardviewtwo"
                android:layout_width="380dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="1dp"
                android:checkMark="?android:attr/textCheckMark"
                android:gravity="center_vertical|center_horizontal"
                android:hint="номер задачи"
                android:inputType="textMultiLine"
                android:text="#"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <View
                android:id="@+id/viewФрагментлинияCompletetasks"
                android:layout_width="50dp"
                android:layout_height="2dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/text2_innercardviewtwo"
                android:layout_alignParentLeft="false"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorPrimaryDark"
                android:gravity="center_vertical|center_horizontal" />


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/text2_callsBack_current_task"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
                android:layout_width="380dp"
                android:layout_height="450dp"
                android:layout_below="@+id/viewФрагментлинияCompletetasks"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="false"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="5dp"
                android:drawableStart="@drawable/icon_dsu1_create_new_create_task1"
                android:foregroundGravity="center_vertical"
                android:gravity="center_horizontal|center_vertical"
                android:hint="Напишите примечание !!! "
                android:inputType="textMultiLine|textCapSentences"
                android:maxLength="200"
                android:layout_centerHorizontal="true"
                android:singleLine="false"
                android:textColor="#000000"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="visible" />>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BottomFor_task_deseble_result_task"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_below="@+id/text2_callsBack_current_task"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:drawableLeft="@drawable/icon_dsu1_commitpayrollback"
                android:focusable="auto"
                android:fontFamily="sans-serif-medium"
                android:gravity="center|center_vertical"
                android:text="Отказ"
                android:textColor="#0E0E0E"
                android:textSize="10sp"
                android:textStyle="bold"
                android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                android:typeface="normal"
                android:visibility="visible"
                tools:visibility="visible" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/BottomFor_task_complete_result_task"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="165dp"
                android:layout_height="40dp"
                android:layout_below="@+id/text2_callsBack_current_task"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="10dp"
                android:clickable="true"
                android:drawableLeft="@drawable/icon_dsu1_commitpay_success"
                android:focusable="auto"
                android:fontFamily="sans-serif-medium"
                android:gravity="center|center_vertical"
                android:text="Подписать"
                android:textColor="#0E0E0E"
                android:textSize="9sp"
                android:layout_centerHorizontal="true"
                android:textStyle="bold"
                android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
                android:typeface="normal"
                android:visibility="visible"
                tools:visibility="visible" />

            <!--     android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar"-->
        </RelativeLayout>


    </com.google.android.material.card.MaterialCardView>


</LinearLayout>