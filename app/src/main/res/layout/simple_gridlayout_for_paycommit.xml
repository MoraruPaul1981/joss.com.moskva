<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardviewmatireacommitpaygridlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:textSize="10sp"
    app:cardBackgroundColor="#F0F8FF"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:strokeColor="#E0E0E3"
    app:cardMaxElevation="100dp"
    app:strokeWidth="1dp"
    android:translationZ="50dp"
    android:animateLayoutChanges="true"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    tools:context=".LayerApp.PaysCommitApp.View.Window.MainActivity_CommitPay">


    <LinearLayout
        android:id="@+id/linearLayoutsimplegridluyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="150dp"
        android:maxHeight="850dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">


    <!-- ROW 1 САми данные от 1 с  -->
    <GridLayout
        android:id="@+id/КонтейнерДляТабеляГридТретийВнутрений"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCE5EA"
        android:columnCount="2"
        android:orientation="horizontal"
        android:scrollbarAlwaysDrawHorizontalTrack="true">

        <EditText
            android:id="@+id/ВтораяСтрочкаПонедельникЗначение"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:inputType="number"
            android:padding="15dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="SpeakableTextPresentCheck" />

        <EditText
            android:id="@+id/ВтораяСтрочкавторникЗначение"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:inputType="number"
            android:padding="15dp"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold" />



        <!-- TODO конец  добавляем дополнительные textview но на экране их не будет видно -->

        <!--  Холостые ячейки первой строчки-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:padding="5dp"
            android:textAlignment="center"
            android:textStyle="bold" />


    </GridLayout>

    <!--  вторая СТРОЧКА НОМЕР ДВА ЛИНИЯ ПОДЧЕРЧИКАТ фио после вствки -->

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_row="0"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:background="#C0C0C0"
        android:gravity="center" />

    </LinearLayout>



</com.google.android.material.card.MaterialCardView>