<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="visible"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    tools:context=".Tabels.viewpagers.MainActivity_Tabel_Single_PeopleOneSwipe">

    <TableLayout
        android:id="@+id/tableLayout_headres"
        android:shrinkColumns="*"
        android:stretchColumns="0"
        android:collapseColumns="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="top"
        android:padding="1dp"
        android:layout_margin="1dp"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        tools:context=".Tabels.MainActivity_Tabel_Single_People">





        <!--//TODO   НАЧАЛО ПЕРВАЯ СТРОЧКА ROW #4-->
        <TableRow
            android:id="@+id/tableRow_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/disayn_line_tablerow5"
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:layout_gravity="center">

        <androidx.appcompat.widget.Toolbar
            android:layout_column="0"
          
            android:id="@+id/toolbar_single"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:background="#FFFFFF">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/materialTextViewnametabel"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:gravity="center"
                android:textStyle="bold"
                android:text="ТАБЕЛЬ"
                android:textColor="#0A0A09"
                android:background="#FFFFFF"
                android:visibility="visible"
                android:textSize="11sp" />

        </androidx.appcompat.widget.Toolbar>
        </TableRow>








    <TableLayout
        android:shrinkColumns="*"
        android:stretchColumns="3"
        android:collapseColumns="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="top"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        tools:context=".Tabels.MainActivity_Tabel_Single_People">

        <!--//TODO   НАЧАЛО ПЕРВАЯ СТРОЧКА ROW #4-->
        <TableRow
            android:id="@+id/tableRow_headres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/disayn_line_tablerow5"
            android:gravity="center"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:layout_gravity="center_horizontal"
            android:minHeight="20dp">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/imageButtonbackotsingletabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:backgroundTint="#FFFFFF"
                android:backgroundTintMode="screen"
                android:gravity="center_vertical|center_horizontal"
                android:padding="1dp"
                android:stateListAnimator="@drawable/icon_dsu1_exit3_foreground"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textStyle="bold"
                app:cardCornerRadius="30dp"
                app:cornerRadius="20dp"
                app:icon="@drawable/icon_dsu1_exit3_foreground"
                app:iconGravity="textEnd"
                app:iconSize="40dp"
                app:iconTint="#686565"
                app:rippleColor="#F50057"
                tools:ignore="SpeakableTextPresentCheck" />





            <LinearLayout
                android:layout_column="1"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/materialTextViewfio"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#0A0A09"
                    android:visibility="visible"
                    android:padding="1dp"
                    android:layout_margin="1dp"
                    android:hint="ФИО"
                    android:textSize="14sp" />


                <com.google.android.material.textview.MaterialTextView
                    android:layout_column="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/materialTextViewprofession"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:textColor="#0A0A09"
                    android:visibility="visible"
                    android:padding="1dp"
                    android:layout_margin="1dp"
                    android:hint="Профессия"
                    android:textSize="13sp" />

            </LinearLayout>





            <LinearLayout
                android:layout_column="2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">


                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnermesazyear"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:textColor="#0A0A09"
                    android:padding="1dp"
                    android:layout_margin="1dp"
                    android:hint="месяц"
                    android:textSize="13sp" />


                <com.google.android.material.textview.MaterialTextView
                    android:layout_column="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinnerchasy"
                    android:gravity="center_vertical|center_horizontal"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:padding="2dp"
                    android:textColor="#0A0A09"
                    android:layout_margin="2dp"
                    android:hint="часы"
                    android:textSize="13sp" />

            </LinearLayout>

        </TableRow>

     </TableLayout>










        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:background="@drawable/disayn_line_tablerow5"
            android:gravity="center_horizontal">






                    <RelativeLayout
                        android:layout_width="match_parent"
                    android:layout_height="wrap_content">



            <androidx.core.widget.NestedScrollView
            android:id="@+id/nestedScrollView_singlet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/disayn_line_tablerow5"




                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"

                android:layout_above="@+id/spinnerdepartament"

            android:layout_marginTop="1dp"
            android:layout_marginBottom="1dp"
                android:fitsSystemWindows="true"
                android:scrollbars="vertical"
                android:scrollbarAlwaysDrawVerticalTrack="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">


            <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycleviewsingletabel"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"


                        android:background="#FFFFFF"
                        android:keyboardNavigationCluster="true"
                        android:scrollbars="vertical"



                        android:visibility="visible"
                        android:windowSoftInputMode="stateVisible|adjustPan"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        app:layout_optimizationLevel="standard|barrier|chains" />

            </androidx.core.widget.NestedScrollView>




            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/spinnerdepartament"
                android:layout_column="0"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/disayn_line_tablerow5"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:padding="2dp"
                android:layout_margin="3dp"
                android:tooltipText="Название цфо" />


</RelativeLayout>

        </TableRow>





    </TableLayout>

</LinearLayout>