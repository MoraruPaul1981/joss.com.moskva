<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="visible"
    tools:context=".Tabels.MainActivity_Tabel_Single_People">

    <ScrollView
        android:id="@+id/scrollview_new_materials"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="horizontal|vertical"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll">

    <HorizontalScrollView
        android:id="@+id/ГоризонтльнаяПрокруткаВнутриСамТабель_mm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|center_horizontal"
        android:fadingEdge="horizontal|vertical"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/КонтейнерКудаЗагружаетьсяФИО">




    <TableLayout
        android:id="@+id/TableLayoutSingleTabelOneRow"
        android:shrinkColumns="*"
        android:stretchColumns="*"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:gravity="center_horizontal|center_vertical"
        android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
        tools:context=".Tabels.MainActivity_Tabel_Single_People">











<!--//TODO начало первой строчки НАЗВАНИЙ-->
    <TableRow
        android:id="@+id/TableRow1Name"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_margin="4dp"
        android:layout_height="wrap_content"
        android:minHeight="15dp">


        <com.google.android.material.textview.MaterialTextView
            android:layout_column="0"
            android:id="@+id/d1"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
              android:visibility="visible"
            android:hint="d1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_width="wrap_content"
            android:minWidth="80dp"
            android:layout_height="3mm"
            android:textSize="13sp"
            android:background="#FFFFFF"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_column="1"
            android:id="@+id/d2"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
              android:visibility="visible"
            android:hint="d2"
            android:layout_width="wrap_content"
            android:minWidth="80dp"
            android:layout_height="3mm"
            android:textSize="13sp"
            android:background="#FFFFFF" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_column="2"
            android:id="@+id/d3"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
              android:visibility="visible"
            android:hint="d3"
            android:layout_width="wrap_content"
            android:minWidth="80dp"
            android:layout_height="3mm"
            android:textSize="13sp"
            android:background="#FFFFFF" />
        <com.google.android.material.textview.MaterialTextView
            android:layout_column="3"
            android:id="@+id/d4"
            android:gravity="center_vertical|center_horizontal"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
              android:visibility="visible"
            android:hint="d4"
            android:layout_width="wrap_content"
            android:minWidth="80dp"
            android:layout_height="3mm"
            android:textSize="13sp"
            android:background="#FFFFFF" />
    </TableRow>
<!--//TODO конец первой строки Названия -->

 <!--
    //TODO НАЧАЛО ВТОРОЙ ЛИНИИ ЦВЕТА -->
    <TableRow
        android:id="@+id/TableTwoLine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_margin="2dp"
        android:gravity="center_vertical|center_horizontal">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/line2singletabel"
            android:layout_span="5"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:minWidth="100dp"
            android:clickable="true"
            android:focusable="auto"
            android:fontFamily="sans-serif-medium"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:typeface="normal"
            android:visibility="visible"
            app:cornerRadius='150dp'
            app:cardElevation="5dp"
            tools:visibility="visible"
            android:translationZ="100dp"
            android:background="@drawable/textlines_tabel_row_name_value"
            android:animateLayoutChanges="true" />
    </TableRow>




    <!--//TODO НАчало ПЕРВОЙ ЛИНИИ ДАННЫХ-->
