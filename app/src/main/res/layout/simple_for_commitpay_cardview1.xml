                android:visibility="visible" />


            <TextView
                android:id="@+id/text6_polamoneybudchetheader"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text5_polamoneybudchetheader"
                android:layout_alignRight="@+id/text1_polamoneybudchetheader"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/dsu1_botton_linesface"
                android:checkMark="?android:attr/textCheckMark"
                android:foregroundGravity="left"
                android:gravity="center_vertical"
                android:hint="Сумма"
                android:minHeight="20dp"
                android:singleLine="false"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="normal"
                android:visibility="visible" />





            <TextView
                android:id="@+id/text6_valuepay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text5_valuepay"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/text6_polamoneybudchetheader"
                android:checkMark="?android:attr/textCheckMark"
                android:foregroundGravity="center"
