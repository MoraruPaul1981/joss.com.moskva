                android:hint=" данные сумма"
                android:minHeight="20dp"
                android:singleLine="false"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/BottomFor_task_deseble_otkas_commitpay"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_below="@+id/text6_polamoneybudchetheader"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:drawableLeft="@drawable/icon_dsu1_commitpayrollback"
                android:focusable="auto"
                android:fontFamily="sans-serif-medium"
                android:gravity="center|center_vertical"
                android:text="Отказать"
                android:textColor="#0E0E0E"
                android:textSize="8sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:visibility="visible"
                app:cornerRadius='15dp'
                tools:visibility="visible" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/BottomFor_task_complete_result_success_commitpay"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="33dp"
                android:layout_below="@+id/text6_polamoneybudchetheader"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"

                android:layout_marginStart="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:clickable="true"
                android:drawableLeft="@drawable/icon_dsu1_commitpay_success"
                android:focusable="auto"
                android:fontFamily="sans-serif-medium"
                android:gravity="center|center_vertical"
                android:text="Согласовать"
                android:textColor="#0E0E0E"
                android:textSize="8sp"
                android:textStyle="bold"
                android:typeface="normal"
                android:visibility="visible"
                app:cornerRadius='15dp'
                tools:visibility="visible" />

