<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/simple_task_for_Tasks"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    android:background="#F5FFFA"
    tools:context=".Code_For_Commit_Payments_КодДля_Согласование.MainActivity_CommitPay">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardviewmatireacommitpay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:minHeight="150dp"
        android:layout_margin="5dp"
        android:checkable="true"
        android:clickable="false"
        android:singleLine="false"
        android:focusable="true"
        android:textSize="10sp"
        app:cardBackgroundColor="#F0F8FF"
        app:cardCornerRadius="15dp"
        app:cardElevation="2dp"
        app:strokeColor="#F5FFFA"
        app:cardMaxElevation="100dp"
        app:strokeWidth="0dp"
        android:translationZ="50dp"
        android:animateLayoutChanges="true">

        <RelativeLayout
            android:id="@+id/relativelayoutcardviewmatirealtask"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp">


            <TextView
                android:id="@+id/text0_innercardview_headmessage"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/dsu1_botton_linesface"
                android:checkMark="?android:attr/textCheckMark"
                android:foregroundGravity="left"
                android:gravity="center_vertical"
                android:hint="Номер №"
                android:minHeight="20dp"
                android:singleLine="false"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="normal"
                android:visibility="visible" />

            <TextView
                android:id="@+id/text0_valuepay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="20dp"
                android:layout_alignParentRight="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/text0_innercardview_headmessage"
                android:checkMark="?android:attr/textCheckMark"
                android:foregroundGravity="center"
                android:gravity="left|center_vertical"
                android:hint=" данные номер №"
                android:singleLine="false"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible" />


            <TextView
                android:id="@+id/text1_polamoneybudchetheader"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text0_valuepay"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="1dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/dsu1_botton_linesface"
                android:checkMark="?android:attr/textCheckMark"
                android:foregroundGravity="left"
                android:gravity="center_vertical"
                android:hint="Цфо"
                android:minHeight="20dp"
                android:singleLine="false"
                android:textAlignment="gravity"
                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="normal"
                android:visibility="visible" />


            <TextView
                android:id="@+id/text3_valuepay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
