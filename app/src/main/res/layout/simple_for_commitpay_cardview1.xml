                android:textColor="#000000"
                android:textSize="13sp"
                android:textStyle="normal"
                android:visibility="visible" />


            <TextView
                android:id="@+id/text4_valuepay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
