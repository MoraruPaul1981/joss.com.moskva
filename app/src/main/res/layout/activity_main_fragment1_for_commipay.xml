<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/activity_fragment1_for_commitpays"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".Code_For_Commit_Payments_КодДля_Согласование.MainActivity_CommitPay"
    android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/activitynain_for_Taskslinelayoutrela3nameAndLine"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="#FFFFFF"
            tools:context=".Code_For_Tasks_КодДля_Задания.MainActivity_Tasks">
            <TextView
                android:id="@+id/TextView"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:text=""
                android:textAlignment="textStart"
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:visibility="visible"
                tools:ignore="MissingConstraints,RtlCompat" />
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/activitynain_for_Taskslinelayoutrela3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:orientation="vertical"
        android:background="#FFFFFF"

        tools:context=".Code_For_Tasks_КодДля_Задания.MainActivity_Tasks">


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleviewcommitpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bottomnavigationActivicommit"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:background="#FFFFFF"
            android:minHeight="500dp"
            android:visibility="visible"
            tools:ignore="MissingConstraints" />


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomnavigationActivicommit"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:scrollbarFadeDuration="@integer/config_navAnimTime"
            android:background="#0A524B"
            android:translationZ="5dp"
            app:itemIconTint="#F2F5F5"
            app:menu="@menu/manu_navigator_buttom_for_commitpay"
            app:popupTheme="@style/fortasknavigator"
            tools:ignore="MissingConstraints" />


        <ProgressBar
            android:id="@+id/prograessbarcommitpaydown"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_above="@+id/bottomnavigationActivicommit"
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_height="10dp"
            android:scaleY="3"
            android:scaleX="1"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"
            android:visibility="visible" />


    </RelativeLayout>




</LinearLayout>

